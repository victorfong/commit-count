#!/bin/bash 

bin=`dirname $0`

echo "Creating Work Directory"
mkdir ~/tmp/commit-count/work -p
if [ ! -d ~/tmp/commit-count/work/$1 ]; then
	echo "Cloning Source"
	cd ~/tmp/commit-count/work 
	git clone $2 $1
else
	echo "Pulling Sourcing"
	cd ~/tmp/commit-count/work/$1
	git pull origin master -r
	cd ..
fi

echo "Generating Log file"
cd ~/tmp/commit-count/work/$1 
git log --all > ~/tmp/commit-count/work/$1_log.txt
